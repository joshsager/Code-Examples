package  {	import flash.display.MovieClip;	import flash.text.TextField;	import flash.events.TouchEvent;	import flash.ui.Multitouch;	import flash.ui.MultitouchInputMode;		public class MultiTouchExample extends MovieClip {		// VARIABLES		var box1:MovieClip;		var box2:MovieClip;		var box3:MovieClip;		var textBox:TextField;		var touchID:int;		public function MultiTouchExample() {						Multitouch.inputMode = MultitouchInputMode.TOUCH_POINT;				// ASSET INSTANTIATION			box1 = createBox(200)			box2 = createBox(275)			box3 = createBox(350)			textBox = createTextBox()						// VARIBALE DEFINITION			touchID = 0;						textBox.text = String(Multitouch.maxTouchPoints);						// TOUCH EVEN LISTENERS			stage.addEventListener(TouchEvent.TOUCH_BEGIN, onTouchBegin);			stage.addEventListener(TouchEvent.TOUCH_MOVE, onTouchMove);			stage.addEventListener(TouchEvent.TOUCH_END, onTouchEnd);		}				// ON SCREEN ASSET FUNCTIONS		private function createBox(x:int):MovieClip{			var mc:MovieClip = new MovieClip();			mc.graphics.beginFill(0xFF0000);			mc.graphics.drawRect(0,0,50,40);			addChild(mc);			mc.x=x;			return mc;		}		private function createTextBox():TextField{			var tb:TextField = new TextField();			tb.autoSize = "left";			addChild(tb);			return tb;		}		// TOUCH EVENT HANDLERS		private function onTouchBegin(event:TouchEvent) {		   touchID = event.touchPointID;		   textBox.text = "TOUCH_BEGIN " + event.touchPointID;		}		private function onTouchMove(event:TouchEvent) {			textBox.text = String(touchID);						if(event.touchPointID == 2){			   box1.x = event.stageX;			   box1.y = event.stageY;			   textBox.text = "TOUCH_MOVE " + event.touchPointID;			}			if(event.touchPointID == 3){			   box2.x = event.stageX;			   box2.y = event.stageY;			   textBox.text = "TOUCH_MOVE " + event.touchPointID;			}			// ONLY IF MORE THAN TWO POINTS OF TOUCH ARE SUPPORTED			if(event.touchPointID == 4){			   box3.x = event.stageX;			   box3.y = event.stageY;			   textBox.text = "TOUCH_MOVE " + event.touchPointID;			}		}		private function onTouchEnd(event:TouchEvent) {			//stage.removeEventListener(TouchEvent.TOUCH_MOVE, onTouchMove);		   //stage.removeEventListener(TouchEvent.TOUCH_END, onTouchEnd);		   textBox.text = "TOUCH_END" + event.touchPointID;		}			}	}